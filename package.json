{
  "name": "@eth-optimism/smock",
  "version": "1.0.0-alpha.0",
  "main": "build/index.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn run build:typescript",
    "build:typescript": "yarn clean && tsc --build src",
    "build:contracts": "hardhat compile --config test/suites/hardhat/utils/hardhat.config.ts --show-stack-traces",
    "test": "yarn run test:hardhat",
    "test:hardhat": "hardhat test --config test/suites/hardhat/utils/hardhat.config.ts --show-stack-traces",
    "lint": "yarn run lint:typescript",
    "lint:typescript": "tslint --format stylish --project .",
    "lint:fix": "yarn run lint:fix:typescript",
    "lint:fix:typescript": "prettier --config prettier-config.json --write \"{src,test}/**/*.ts\"",
    "clean": "rimraf engine hardhat types utils *.d.ts *.map *.js tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.8",
    "@types/uuid": "^8.3.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "ethers": "^5",
    "ethereum-waffle": "^3.2.0",
    "ethereumjs-vm": "4.2.0",
    "glob": "^7.1.6",
    "hardhat": "^2.0.3",
    "lodash": "^4.17.20",
    "mocha": "^8.2.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "truffle": "^5.1.62",
    "tslint": "^6.1.3"
  },
  "dependencies": {
    "bn.js": "^5.1.3",
    "import-locals": "^2.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "uuid": "^8.3.1"
  },
  "peerDependencies": {
    "ethers": "^5"
  }
}
